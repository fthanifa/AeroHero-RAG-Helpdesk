<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.fitri.aerohero.controller.NavBarController"
            prefHeight="140.0" prefWidth="1280.0">

    <children>

        <!-- Logo as a Button -->
        <Button layoutX="19.0" layoutY="5.0"
                style="-fx-background-color: transparent; -fx-padding: 0;"
                onAction="#handleLogoClick">
            <graphic>
                <ImageView fitHeight="92.0" fitWidth="130.0"
                           preserveRatio="true" pickOnBounds="true">
                    <image>
                        <Image url="@../images/AeroHero Logo.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>

        <!-- Navigation Buttons -->
        <Button layoutX="680.0" layoutY="28.0"
                text="Tickets"
                styleClass="nav-button"
                onAction="#handleTicketsClick"/>
        
        <Button layoutX="760.0" layoutY="28.0"
                text="Track"
                styleClass="nav-button"
                onAction="#handleTrackClick"/>
        
        <Button layoutX="840.0" layoutY="28.0"
                text="Chat"
                styleClass="nav-button"
                onAction="#handleChatClick"/>
        
        <Button layoutX="920.0" layoutY="28.0"
                text="FAQs"
                styleClass="nav-button"
                onAction="#handleFaqClick"/>

        <!-- Login/Logout Button -->
        <Button fx:id="loginLogoutButton" layoutX="1050.0" layoutY="28.0"
                text="Login"
                styleClass="nav-button"/>

        <!-- My Profile Button -->
        <Button fx:id="profileButton" layoutX="1130.0" layoutY="28.0"
                text="My Profile"
                styleClass="nav-button"
                visible="false"
                onAction="#handleProfileClick"/>

    </children>
</AnchorPane>