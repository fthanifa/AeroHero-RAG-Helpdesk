<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.shape.Line?>
<?import javafx.fxml.FXMLLoader?>

<VBox xmlns="http://javafx.com/javafx/21"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.fitri.aerohero.controller.LoginController"
      fx:id="loginRoot"
      prefWidth="1280.0" prefHeight="800.0"
      alignment="TOP_CENTER" spacing="30.0"
      stylesheets="@../css/style.css"
      styleClass="root">

    <!-- Reusable Navigation Bar -->
    <fx:include source="NavBar.fxml"/>

    <!-- Title -->
    <Label text="Log in to AEROHERO"
       styleClass="heading"
       style="-fx-font-weight: bold; -fx-font-size: 35;" />

    <!-- Subtext -->
    <Label text="Turn every journey into rewards — earn miles, enjoy exclusive perks, and unlock a world of travel benefits with AeroHero."
           wrapText="true" styleClass="subtext" maxWidth="550.0" alignment="CENTER" />

    <!-- Card Wrapper Centered -->
    <HBox alignment="CENTER" spacing="60.0" styleClass="card"
          maxWidth="700.0" prefWidth="700.0" prefHeight="350.0">

        <!-- Login Column -->
        <VBox alignment="CENTER" spacing="15.0" prefWidth="300.0">
            <Label text="Login" styleClass="title" />
            <TextField fx:id="emailField" promptText="Email or Number" styleClass="rounded-field"/>
            <PasswordField fx:id="passwordField" promptText="Password" styleClass="rounded-field"/>
            <Button fx:id="loginButton" text="Login" onAction="#handleLogin" styleClass="rounded-button"/>
            <Label fx:id="errorLabel" text="Invalid email or password." textFill="#f00000" visible="false"/>
        </VBox>

        <!-- Divider -->
        <Line startX="0.0" startY="0.0" endX="0.0" endY="250.0" strokeWidth="2.0"/>

        <!-- Join Column (Centered) -->
        <VBox alignment="CENTER" spacing="15.0" prefWidth="300.0" prefHeight="350.0">
            <VBox alignment="CENTER" spacing="10.0">
                <Label text="Register" styleClass="title" />
                <Label text="Not an AeroHero member yet?" 
                       wrapText="true" 
                       styleClass="title" 
                       alignment="CENTER"/>

                <Label text="Register now to make the most of every mile with us."
                        wrapText="true"
                        maxWidth="260.0"
                        styleClass="subtext"
                        alignment="CENTER"
                        textAlignment="CENTER"/>

                <Button fx:id="joinButton" text="Join Now" onAction="#handleGoToRegister" styleClass="rounded-button"/>
            </VBox>
        </VBox>
    </HBox>

    <!-- Footer (Right Aligned) -->
    <HBox alignment="BOTTOM_RIGHT" prefWidth="1280.0">
        <padding>
            <Insets top="0" right="40" bottom="10" left="0"/>
        </padding>
        <children>
            <Label text="© 2025 AeroHero" styleClass="footer"/>
        </children>
    </HBox>

</VBox>
