<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.fxml.FXMLLoader?>

<StackPane xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.fitri.aerohero.controller.FaqPassengerController"
           fx:id="faqRoot"
           prefWidth="1280.0"
           prefHeight="800.0"
           styleClass="root"
           stylesheets="@../css/style.css"
           style="-fx-background-color: #1E212B;">

    <VBox alignment="TOP_CENTER" spacing="20.0" prefWidth="1280.0">

        <!-- Reusable Navigation Bar -->
        <fx:include source="NavBar.fxml"/>

        <!-- Main Content Centered -->
        <VBox alignment="TOP_CENTER" spacing="30.0" prefWidth="900.0" maxWidth="900.0">

            <!-- Title -->
            <VBox alignment="CENTER">
                <Label text="Frequently Asked Questions (FAQ)"
                        styleClass="heading"
                        style="-fx-font-size: 35; -fx-font-weight: bold;"
                        alignment="CENTER"
                        textAlignment="CENTER"/>

                <Label text="Find answers to your questions about AeroHero policies, services and more." styleClass="subtext"/>
            </VBox>

            <!-- Search Bar -->
            <HBox alignment="CENTER" spacing="10.0">
                <TextField fx:id="searchField" promptText="Search FAQs" prefWidth="500.0" styleClass="text-field"/>
                <Button text="ðŸ”" onAction="#handleSearch" styleClass="button"/>
            </HBox>

            <!-- Scrollable FAQ List -->
            <ScrollPane fitToWidth="true" prefHeight="560.0" prefWidth="850.0"
                        styleClass="faq-scroll"
                        style="-fx-background-color: transparent; -fx-border-color: transparent;">
                <content>
                    <VBox fx:id="faqListVBox"
                          alignment="CENTER"
                          spacing="15.0"
                          styleClass="profile-wrapper"
                          maxWidth="850.0" />
                </content>
            </ScrollPane>
        </VBox>

        <!-- Footer -->
        <HBox alignment="BOTTOM_RIGHT" prefWidth="1280.0">
            <padding>
                <Insets top="0" right="40" bottom="10" left="0"/>
            </padding>
            <children>
                <Label text="Â© 2025 AeroHero" styleClass="footer"/>
            </children>
        </HBox>
    </VBox>
</StackPane>
