<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.text.*?>
<?import javafx.fxml.FXMLLoader?>
<?import javafx.scene.shape.Rectangle?>

<BorderPane xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.fitri.aerohero.controller.LandingPageController"
            prefWidth="1280" prefHeight="800"
            style="-fx-background-color: #1E212B;">

    <!-- NavBar -->
    <top>
        <fx:include source="NavBar.fxml"/>
    </top>

    <!-- Main Content -->
    <center>
        <VBox spacing="30" alignment="TOP_CENTER">
            <padding>
                <Insets top="30.0" right="30.0" bottom="10.0" left="30.0"/>
            </padding>
            <children>

                <!-- Hero Section with Centered Image and Text on Right -->
<StackPane prefWidth="1280" prefHeight="350" style="-fx-background-radius: 20;">
    <children>
        <!-- Centered Image Wrapper -->
        <HBox alignment="CENTER">
            <children>
                <ImageView fx:id="heroImage"
                           fitWidth="1200" fitHeight="350"
                           preserveRatio="false">
                    <clip>
                        <Rectangle width="1200" height="350" arcWidth="40" arcHeight="40"/>
                    </clip>
                </ImageView>
            </children>
        </HBox>

        <!-- Right-Aligned Text -->
        <VBox alignment="CENTER_RIGHT">
            <padding>
                <Insets right="50.0"/>
            </padding>
            <children>
                <Label text="Navigate the"
                       style="-fx-text-fill: white; -fx-font-size: 32px; -fx-font-family: 'Poppins'; -fx-font-weight: bold;" />
                <Label text="Skies of Support"
                       style="-fx-text-fill: white; -fx-font-size: 38px; -fx-font-family: 'Poppins'; -fx-font-weight: bold;" />
            </children>
        </VBox>
    </children>
</StackPane>

                <!-- Subheading -->
                <Label text="How can we assist you today?"
                       style="-fx-text-fill: white; -fx-font-size: 22px; -fx-font-family: 'Poppins'; -fx-font-weight: bold;" />

                <!-- Clickable Cards -->
                <HBox spacing="40" alignment="CENTER">
                    <children>

                        <!-- Submit a Ticket -->
                        <Button fx:id="ticketButton" onAction="#handleTicketClick"
                                style="-fx-background-color: #2B2F3F; -fx-background-radius: 15; -fx-padding: 20; -fx-cursor: hand;"
                                prefWidth="300" prefHeight="120">
                            <graphic>
                                <VBox alignment="TOP_LEFT" spacing="10">
                                    <children>
                                        <Label text="Submit a Ticket"
                                               style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-family: 'Poppins'; -fx-font-weight: bold;" />
                                        <Label text="Get support from our team regarding your inquiries or issues."
                                               wrapText="true"
                                               style="-fx-text-fill: white; -fx-font-size: 12px; -fx-font-family: 'Poppins';" />
                                    </children>
                                </VBox>
                            </graphic>
                        </Button>

                        <!-- Track -->
                        <Button fx:id="trackButton" onAction="#handleTrackClick"
                                style="-fx-background-color: #2B2F3F; -fx-background-radius: 15; -fx-padding: 20; -fx-cursor: hand;"
                                prefWidth="300" prefHeight="120">
                            <graphic>
                                <VBox alignment="TOP_LEFT" spacing="10">
                                    <children>
                                        <Label text="Track your Baggage &amp; Flight"
                                               style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-family: 'Poppins'; -fx-font-weight: bold;" />
                                        <Label text="Monitor your flight and baggage status in real-time."
                                               wrapText="true"
                                               style="-fx-text-fill: white; -fx-font-size: 12px; -fx-font-family: 'Poppins';" />
                                    </children>
                                </VBox>
                            </graphic>
                        </Button>

                        <!-- Chat -->
                        <Button fx:id="chatButton" onAction="#handleChatClick"
                                style="-fx-background-color: #2B2F3F; -fx-background-radius: 15; -fx-padding: 20; -fx-cursor: hand;"
                                prefWidth="300" prefHeight="120">
                            <graphic>
                                <VBox alignment="TOP_LEFT" spacing="10">
                                    <children>
                                        <Label text="Chat with Us"
                                               style="-fx-text-fill: white; -fx-font-size: 16px; -fx-font-family: 'Poppins'; -fx-font-weight: bold;" />
                                        <Label text="Start a conversation with our AeroHero AI assistant."
                                               wrapText="true"
                                               style="-fx-text-fill: white; -fx-font-size: 12px; -fx-font-family: 'Poppins';" />
                                    </children>
                                </VBox>
                            </graphic>
                        </Button>

                    </children>
                </HBox>

            </children>
        </VBox>
    </center>

    <!--Footer -->
    <bottom>
        <HBox alignment="BOTTOM_RIGHT" prefWidth="1280.0">
            <padding>
                <Insets right="40" bottom="10"/>
            </padding>
            <children>
                <Label text="Â© 2025 AeroHero"
                       style="-fx-text-fill: #888888; -fx-font-size: 11px; -fx-font-family: 'Poppins';"/>
            </children>
        </HBox>
    </bottom>

</BorderPane>